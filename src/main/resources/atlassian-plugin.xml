<atlassian-plugin key="${atlassian.plugin.key}"
                  name="GADGET POST ISSUES"
                  pluginsVersion="2">
    <!-- Contains plugin metadata. -->
    <plugin-info>
        <description>Plugin custom para crear issues en las apps de Palace Resorts.</description>
        <vendor name="Atlassian" url="http://www.atlassian.com"/>
        <version>1.0</version>
    </plugin-info>
	
	<resource
    type="download"
    name="gadget.png"
    location="gadget.png"/>

  <web-resource key="resources">
    <resource
      type="download"
      name="gadget.js"
      location="gadget.js">
      <property key="content-type" value="text/javascript"/>
    </resource>
    <resource
      type="download"
      name="gadget.css"
      location="gadget.css">
      <property key="content-type" value="text/css"/>
    </resource>
  </web-resource>
  
    <!--
        Registers the gadget spec as a plugin module. This allows the gadget to
        appear in the gadget directory and also allows administrators to
        disable/enable the gadget.
     -->
    <gadget key="issues-gadget" name="GADGET POST ISSUES" location="gadget.xml"/>
    <!-- Makes the gadget Locale messages available for the gadget's use. -->
    <resource type="download" name="i18n/ALL_ALL.xml" location="i18n/ALL_ALL.xml">
        <param name="content-type" value="text/xml; charset=UTF-8"/>
    </resource>
    <!--
        Automatically finds all JAX-RS resource classes in the plugin and
        publishes them.
     -->
    <rest key="gadget-rest-resources" path="/gadget-issues" version="1.0">
        <description>Provides the REST resource for the project list.</description>
    </rest>

</atlassian-plugin>